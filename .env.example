# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Langsmith Configuration for AI monitoring and debugging
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=coffee-chatbot

# Application Configuration
APP_HOST=localhost
APP_PORT=8000
DEBUG=true

# Google API Configuration (Optional - for meeting scheduling and email notifications)
# GOOGLE_CREDENTIALS_FILE=credentials.json
# GMAIL_TOKEN_FILE=token_gmail.json
# CALENDAR_TOKEN_FILE=token_calendar.json

# Business Configuration
BUSINESS_NAME=Abbotsford Road Coffee Specialists
BUSINESS_EMAIL=info@abbotsfordcoffee.com
BUSINESS_PHONE=+1-555-123-4567
BUSINESS_TIMEZONE=America/New_York

# Data Storage Configuration
DATA_DIRECTORY=./data
KNOWLEDGE_BASE_DIRECTORY=./knowledge
SALES_DATA_FILE=sales_qualification_data.json

# Security Configuration
SECRET_KEY=your_secret_key_here
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=chatbot.log

# AI Model Configuration
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_TIMEOUT=30

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_SALES_QUALIFICATION=true
ENABLE_APPOINTMENT_SCHEDULING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_CALENDAR_INTEGRATION=false
ENABLE_ANALYTICS=true